<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- boostrap css cdn link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

  <!-- bootstrap icon cdn link -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">

  <!-- Boxicons -->
  <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
  <!-- My CSS -->

  <link rel="stylesheet" href="css/adminproducts.css">

  <title>AdminHub</title>
</head>



<body class="">

  <div class="container-fluid  d-flex p-0 ">

    <!-- SIDEBAR -->
    <div id="sidebar" class="pe-0 col-md-3 ">
      <a href="/adminHome" class="brand">
        <i class='bx bxs-smile'></i>
        <span class="text">Admin</span>
      </a>


      <ul class="side-menu top">
        <li >
          <a href="/adminHome">
            <i class='bx bxs-dashboard'></i>
            <span class="text">Dashboard</span>
          </a>
        </li>

        <li class="active" >
          <a href="/adminproducts">
            <i class='bx bxs-shopping-bags'></i>
            <span class="text">products</span>
          </a>
        </li>
        <li>
          <a href="/adminusers">
            <i class='bx bxs-user'></i>
            <span class="text">users</span>
          </a>
        </li>
        <li>
          <a href="#">
            <i class='bx bx-basket'></i>
            <span class="text">Orders</span>
          </a>
        </li>
        <li>
          <a href="#">
            <i class='bx bxs-edit-alt'></i>
            <span class="text">banner management</span>
          </a>
        </li>
        <li>
          <a href="#">
            <i class='bx bxs-offer'></i>
            <span class="text">coupon management</span>
          </a>
        </li>
        <li>
          <a href="/adminCategory">
            <i class='bx bxs-book'></i>
            <span class="text">category management</span>
          </a>
        </li>
        <li>
          <form action="/logout" method="post" class="py3 d-flex align-items-center justify-content-center">
            <i class='bx bxs-log-out-circle text-danger'></i>
            <button type="submit" class="btn "><span class="text-danger">LOG OUT</span></button>
          </form>
        </li>
      </ul>

    </div>
    <!-- SIDEBAR -->

    <!-- CONTENT -->
    <div class=" col-12 col-md-9 " >
      <div class="ps-0 ">
        <!-- NAVBAR -->
        <nav>
          <div class="p-2 navbar" style="background-color: #F9F9F9;">
            <div class="mobile_brand">
              <a href="/adminHome">
                <i class='bx bxs-smile'></i>
                <span class="text">Admin</span>
              </a>
            </div>
            <img src="image/timegazelogo.png" alt="timegaze logo" style="width: 9rem;">
          </div>


        </nav>
        <!-- NAVBAR -->
        <nav aria-label="breadcrumb " class="p-4">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/adminHome">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Products</li>
          </ol>
        </nav>
        
        <div class="container-fluid ">
          <div class="container d-flex justify-content-end" ><a href="/addproducts"><button type="submit" class="btn btn-dark ">
            add products +
          </button></a>
            
            <a href="/unlistedProducts"><button type="submit" class="btn btn-danger ms-2">
              unlisted products
            </button></a>
            
          </div>
          
        </div>
        <!-- Table -->
        <div class="container-fluid mt-3">
          <div class="table-responsive ">
            <table class="table table-hover rounded ">
              <thead>
                <tr>
                  <th></th>
                  <th>Name</th>
                  <th>QTY</th>
                  <th>Category</th>
                  <th></th>
                 
                </tr>
              </thead>
              <tbody class="mb-2">
                <% for(x in products){ %>
                <tr>
                  <th>
                    <img src="uploads/<%= products[x].image[0] %>" style="width: 4rem;object-fit: cover;">
                  </th>
                  <td class="fixed-td">
                    <h6><%=products[x].productName%></h6>
                    <p class="card-text"><%=products[x].discountPrice%><del class="text-black-50"><%=products[x].price%></del></p>
                  </td>
                  <td><%=products[x].quantity%></td>
                  <td><%=products[x].category.categoryName%></td>
                  <td class="">

                    <div class="d-flex justify-content-center">
                      <a class="icon-link icon-link-hover" href="/updateProduct?productId=<%= products[x]._id %>">
                        <button class="btn">
                          <i class="bi bi-pencil-square"></i>
                        </button>
                      </a>
                        <button class="btn delete_product" data-id="<%=products[x]._id %>" type="submit">
                          <i class="bi bi-trash-fill"></i>
                        </button>
                    </div>
                    
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- CONTENT -->

  </div>

<%- include('../include/adminfooter') %>
