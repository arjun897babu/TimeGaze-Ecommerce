        </nav>
        <!-- NAVBAR -->
        <nav aria-label="breadcrumb " class="p-4">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/adminHome">Home</a></li>
            <li class="breadcrumb-item "><a href="/adminproducts">Products</a></li>
            <li class="breadcrumb-item active" aria-current="page">update products</li>
          </ol>
        </nav>
        <div class="container-fluid p-3  ">
          <div class="bg-white rounded-3">
            <%products=products[0]  %>
            <form action="" class="requires-validation" data-id="<%=products._id%>"
              enctype="multipart/form-data" novalidate>
              <div class="row p-2">

                <div class="col-md-6">
                  <label for="validateProductName" class="form-label">product name</label>
                  <input type="text" class="form-control" name="name" value="<%=products.productName %>"
                    id="validateProductName">
                  <small class="text-danger"></small>
                </div>
                <div class="col-md-6">
                  <label for="validatebrand" class="form-label">brand</label>
                  <input type="text" name="brand" value="<%=products.brand %>" class="form-control" id="validatebrand">
                  <small class="text-danger"></small>
                </div>
                <div class="col-6">
                  <label for="inputAddress" class="form-label">case diameter</label>
                  <input type="number" name="diameter" value="<%=products.caseDiameter%>" class="form-control"
                    id="validateCaseDiameter">
                  <small class="text-danger"></small>
                </div>
                <div class="col-6">
                  <label for="validateCaseShape" class="form-label">case shape</label>
                  <input type="text" name="shape" value="<%=products.caseShape %>" class="form-control"
                    id="validateCaseShape">
                  <small class="text-danger"></small>
                </div>
                <div class="col-md-2">
                  <label for="validatePrice" class="form-label">Price</label>
                  <input type="number" name="price" value="<%=products.price %>" class="form-control"
                    id="validatePrice"><small class="text-danger"></small>
                </div>
                <div class="col-md-2">
                  <label for="validateOffer" class="form-label">discount </label>
                  <input type="number" name="offer" value="<%=products.offer %>" class="form-control"
                    id="validateOffer">
                  <small class="text-danger"></small>
                </div>
                <div class="col-md-2">
                  <label for="validateDiscount" class="form-label">discount price </label>
                  <input type="number" value="<%=products.discountPrice %>" name="discountPrice" class="form-control"
                    id="validateDiscount" readonly>
                  <small class="text-danger"></small>
                </div>
                <div class="col-md-3">
                  <label for="validateCategory" class="form-label">Categories</label>
                  <select id="validateCategory" class="form-select form-control" name="category">
                  
                    <% for (x in categories) { %>
                      <option <%= products.category._id === categories[x]._id?"selected":"" %> 
                        value="<%= categories[x]._id%>"><%= categories[x].categoryName %>
                      </option>
                            <% } %>

                  </select>
                  <small class="text-danger"></small>
                </div>
                <div class="col-md-3">
                  <label for="validateQuantity" class="form-label">quantity </label>
                  <input type="number" name="quantity" value="<%= products.quantity %>" class="form-control"
                    id="validateQuantity">
                  <small class="text-danger"></small>
                </div>
                <div class="col-md-12 m-3  d-flex  justify-content-center">
                  <div class="col-md-6">
                    <input class="form-control" name="images" type="file" id="formFileMultiple" multiple>
                    <small class="text-danger"></small>
                  </div>
                </div>
                <div class="container-fluid row  image-preview-div">
                  <% for (let i=0; i < products.image.length; i++) { %>
                    <div class="col-4 col-sm-3 position-relative">
                      <span data-id="<%=products._id  %>" class="position-absolute delete-image bi bi-x-circle"
                        style="font-size: inherit;cursor: pointer;top: 0.35rem;right: 1.35rem;"></span>
                      <img id="productName" src="/uploads/<%= products.image[i] %>" alt=""
                        style="object-fit: cover;width: 100%; height: 100%;">
                    </div>
                    <% } %>
                </div>
                <div class="container-fluid row imageSecondPreview-div">

                </div>
                <div class="d-flex justify-content-center mt-3">
                  <button type="submit" class="btn btn-primary col-6">update</button>
                </div>

              </div>
            </form>
          </div>


        </div>
      </div>

    </div>

