<body>
  <!-- header -->
  <%- include('include/headerCommon')  %>

      <div class="p-2 catagory">
        <% for( x in categories ) {%>
          <button class="btn btn-dark" style="--bs-btn-font-size: 0rem;">
            <a
              href="/productList?categoryId=<%=categories[x]._id %>">
              <%=categories[x].categoryName%>
            </a></button>
          <%}%>

      </div>

    </div>


  </header>
  <!-- header -->
  <main>
   
  </main>
  <!-- section -->
  <section class="my-2 mx-4 " style="border: 1px solid rgb(53, 51, 51);">
    <div class="container-fluid   ">

      <div class=" my-2">
        <h1 class="text-center text-capitalize " style="margin-bottom: 0;"><span
            style="text-transform: capitalize; color: orange; ">hot selling
          </span> items</h1>
      </div>

      <!-- product card -->
      <div class="d-flex justify-content-evenly product-list ">

        <% if(products.length>0) {%>
          <% for( let i=0;i<products.length;i++) { %>

            <!-- product card -->
            <div class="col-6 col-lg-3 col-md-4 col d-flex justify-content-center">

              <div class="card m-2" style="width: 13rem;">
                <i class="card-img-top d-flex justify-content-end pe-2"><i class="bi bi-heart"></i></i>
                <a href="/singleProduct?productId=<%=products[i]._id%>"><img
                    src="uploads/<%=products[i].image[0]%>" class=""
                    style="object-fit:cover;width: 100%; height: 100%" alt="...">
                  
                </a>
                <div class="card-body p-0">
                  <h5 class="card-title m-1" style="font-size: 0.8rem;">
                    <%=products[i].productName%>
                  </h5>
                  <p class="card-text m-1">₹<%=products[i].discountPrice%> <del>₹<%=products[i].price%></del>
                  </p>
                </div>
                <!-- <div class=" ps-3 pe-3">
                  <button class="btn btn-dark card-img-bottom my-1" style="font-size: 0.6rem;">ADD TO
                    CART</button>
                </div> -->
              </div>
            </div>

            <%}%>
              <%} %>

      </div>

    </div>
  </section>
  <!-- section -->


