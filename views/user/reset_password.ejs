<%- include('../include/header') %>

  <!-- section -->
  <section>
    <div class="container-fluid p-3">

      <div class="ps-4 form-navigation " id="formNavigation">
        <h1 style="border-bottom: 2px solid black;display: inline-block;">Reset password</h1>
      </div>

      <div class=" row signup-form ">
        <div class="login-col col-12 col-sm-6 mb-3">
          <form action="/api/updatePassword" method="post" class="requires-validation" novalidate>

            <div class="mb-3">
              <input type="hidden" name="email" value="<%= registerdEmail %>">
              <label for="validatePassword" class="form-label">new password*</label>
              <input type="password" class="form-control" name="password" id="validatePassword" placeholder="new password..."
                required>
                <small class="text-danger"><%= errorMessage=='Enter a new password'?errorMessage:'' %></small>
            </div>

            <div class="mb-3">
              <label for="validatePassword2" class="form-label">re-enter passowrd</label>
              <input type="password" class="form-control" id="validatePassword2" placeholder="re-enter passowrd"required>
              <small class="text-danger"></small>

            </div>
            <div class="pb-5">
              <button class="btn btn-dark mt-3 " type="submit">Submit <i class="bi bi-forward-fill ms-5"></i></button>
            </div>
          </form>

        </div>
        <div class="img/login-col-img col-12 col-sm-6">
          <img src="/image/02617_WB23_July_alt_lifestyle_featured_image.webp" alt="signup-img "
            style="object-fit:cover;width: 100%; height: 100%">

        </div>



      </div>

    </div>
  </section>
  <!-- section -->


 <%- include("../include/footer") %>
<script src="/js/userResestPassword.js"></script>
<script src="/js/togglebutton.js"></script>

</body>

</html>