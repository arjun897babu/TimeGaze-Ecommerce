<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TimeGaze</title>
  <link rel="icon" href="android-chrome-512x512.png" type="image/png" alt="Site Icon">


  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />

  <!-- boostrap css cdn link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

  <!-- bootstrap icon cdn link -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">


  <!-- css style sheet link -->
  <link rel="stylesheet" href="css/header_footer.css">


  <style>
    .breadcrumb-item a {
      color: rgb(0, 0, 0) !important;
      font-size: inherit;
    }

    .page-link {
      color: black;
    }

    .active>.page-link,
    .page-link.active {
      background-color: black !important;
      border-color: azure !important;
    }

    @media (max-width:768px) {
      .product-images {
        display: none;
      }
    }

    .product-card {
      background-color: #EFEFEF;
      border-radius: 0.8rem;
    }

    .product-card span {
      position: absolute;
      right: 1rem;
      top: 1rem;
    }

    @media (min-width: 576px) {

      #section-last h3 {
        font-size: 1.3rem;
        text-transform: capitalize;
      }
    }

    .form-control:focus {
      color: var(--bs-body-color);
      background-color: var(--bs-body-bg);
      border-color: none;
      outline: 0;
      box-shadow: none;
    }

    .product-card {
      width: 357px;
      height: 455px;
      margin: 10px;
    }

    .product-card img {
      max-width: 100%;
      max-height: 100%;
      object-fit: cover;
    }

   

    .breadcrumb-item a {
      color: rgb(0, 0, 0) !important;
      font-size: inherit;
    }
  </style>

</head>

<body>
  <!-- header -->
  <%- include('../include/headerCommon')  %>

      <div class="p-2 catagory">
        <% for( x in categories ) {%>
          <button class="btn btn-dark" style="--bs-btn-font-size: 0rem;"><a
              href="/productList?categoryId=<%=categories[x]._id %>">
              <%=categories[x].categoryName%>
            </a></button>
          <%}%>
      </div>

    </div>


  </header>
  <!-- header -->
  <!-- content -->
  <div class="container">
    <nav aria-label="breadcrumb " class="p-4">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item "><a href='/productList?categoryId=<%=products.category._id %>'><%=products.category.categoryName %></a></li>
        <li class="breadcrumb-item active" aria-current="page"><%=products.productName%></li>
      </ol>
    </nav>
  </div>
  <section class="py-5">
    <div class="container">
      <div class="row ">
        <aside class="col-sm-6">
          <div class="border rounded-4 p-3 d-flex justify-content-center">
            <img style="object-fit: cover; max-height: 55vh; " class="rounded-4 fit" src="uploads/<%=products.image[0]%>" />
          </div>

        </aside>
        <main class="col-sm-6">
          <div class="p-3">
            <h4 class="title text-dark">
              <%=products.productName %>Fashion <%=products.category.categoryName%>'s <%=products.caseShape%> Case
               Watch <br />
              
            </h4>
            <hr>
            <div class="d-flex flex-row my-3">
              <div class="text-warning mb-1 me-2">
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-fill"></i>
                <i class="bi bi-star-half"></i>
                <span class="ms-1">
                  4.5
                </span>
              </div>

              <!-- <span class="text-success ms-2">In stock</span> -->
            </div>
            <span class="text-success"><%=products.offer%>% offer</span>
            <div class="mb-3">

              <span class="h5">₹<%=products.discountPrice%></span>
              <span class="text-muted"><del>₹<%=products.price%></del></span>
            </div>

            <!-- <p>
            Modern look and quality demo item is a streetwear-inspired collection that continues to break away from the conventions of mainstream fashion. Made in Italy, these black and brown clothing low-top shirts for
            men.
          </p>

          <div class="row">
            <dt class="col-3">Type:</dt>
            <dd class="col-9">Regular</dd>

            <dt class="col-3">Color</dt>
            <dd class="col-9">Brown</dd>

            <dt class="col-3">Material</dt>
            <dd class="col-9">Cotton, Jeans</dd>

            <dt class="col-3">Brand</dt>
            <dd class="col-9">Reebook</dd>
          </div> -->


            <div class="justify-content-center d-flex">
              <a href="#" class="btn btn-dark shadow-0 col-8">

                <i class="me-1 bi bi-base"></i>
                Add to cart
              </a>
            </div>



          </div>
        </main>
      </div>
    </div>
  </section>
  <!-- content -->
  <div class="container p-1 product-images me2 border border-dark-subtle">
    <div class=" bg-light-subtle">
      <div class="container-fluid p-2">
        <div class="row d-flex justify-content-evenly">
         <% for(i=1;i<products.image.length;i++) {%>
          <div class="col-sm-3 d-flex justify-content-center p-2   ">
            <div class="border border-dark ">
              <img class="" src="uploads/<%=products.image[i]  %>" alt="" style="object-fit: contain;width: 10rem;">
            </div>
          </div>
          <% } %>
        </div>
      </div>

    </div>
  </div>

  <div class="container my-3">
    <h4>Product Information</h4>
    <hr>

    <table>
      <tr>
        <th class="pe-4">Product</th>
        <td>:</td>
        <td class="ps-4"><%=products.productName%></td>
      </tr>
      <tr>
        <th class="pe-4">Case Diameter</th>
        <td>:</td>
        <td class="ps-4"><%=products.caseDiameter%> mm</td>
      </tr>
      <tr>
        <th class="pe-4">Case Shape</th>
        <td>:</td>
        <td class="ps-4"><%=products.caseShape%></td>
      </tr>
      <tr>
        <th class="pe-4">Display Type</th>
        <td>:</td>
        <td class="ps-4">Analogue</td>
      </tr>
    </table>
    <h1></h1>
    <hr>
  </div>



  <%- include("../include/footer") %>
    <script src="js/togglebutton.js"></script>

</body>

</html>