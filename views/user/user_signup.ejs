<%- include('../include/header') %>
  <!-- section -->
  <section>
    <div class="container-fluid p-3">

      <div class="ps-4 form-navigation ">
        <h1>signup</h1>
        
          <ul class="d-flex">
            <li class="mx-2"><a href="/login">login</a></li>
            <li class="mx-2" style="border-bottom: 2px solid black;"><a href="/signup">sign up</a></li>
          </ul>

    
      </div>
      
      <div class=" row signup-form ">
        <div class="login-col col-12 col-sm-6 mb-3">
          <form action="/api/users" method="post" class="requires-validation" novalidate>
            <div class="mb-3">
              <label for="validateCustomerName" class="form-label">name*</label>
              <input type="text" class="form-control" name="name" id="validateCustomerName" placeholder="name.." required>
              <small class="text-danger"></small>
            </div>

            <div class="mb-3">
              <label for="validateCustomerEmail" class="form-label">email id*</label>
              <input type="email" class="form-control" name="email" id="validateCustomerEmail" placeholder="email id..." required>
              <small class="text-danger "><%= errorMessage==='Email already exist'?errorMessage:'' %></small>
              
            </div>

            <div class="mb-3">
              <label for="validationCustomerPhoneNumber" class="form-label">phone number*</label>
              <input type="number" class="form-control" name="phonenumber" id="validateCustomerPhoneNumber" placeholder="phone number..." required>
              <small class="text-danger"><%= errorMessage==='Phone number exist'?errorMessage:'' %></small>
            </div>

            <div class="mb-3">
              <label for="validatePassword" class="form-label">passowrd*</label>
              <input type="password" class="form-control" name="password" id="validatePassword" placeholder="passowrd..." required>
              <small class="text-danger"></small>
              
              
            </div>

            <div class="mb-3">
              <label for="validatePassword2" class="form-label">re-enter passowrd</label>
              <input type="password" class="form-control" name="validatePassword2" id="validationPassowrd2" placeholder="re-enter passowrd" required>
              <small class="text-danger"></small>
            </div>
            <div class="pb-5">
              <button class="btn btn-dark mt-3 " type="submit">Submit <i  class="bi bi-forward-fill ms-5"></i></button>
            </div>
            <p><a href="/login">already have an account ?</a></p>
          </form>
       
        </div>
        <div class="login-col-img col-12 col-sm-6">
          <img src="/image/02617_WB23_July_alt_lifestyle_featured_image.webp" alt="signup-img " style="object-fit:cover;width: 100%; height: 100%" >
          
        </div>

        

      </div>
      
    </div>
  </section>
  <!-- section -->

<%- include('../include/footer') %>
<script src="/js/signup.js"></script>
<script src="/js/togglebutton.js"></script>

</body>

</html>