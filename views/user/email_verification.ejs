<%- include('../include/header') %>
  <!-- section -->
  <section>
    <div class="container-fluid p-3">

      <div class=" row signup-form ">
        <div class="login-col col-12 col-sm-6 mb-3">
          <div class="mb-3 text-center p-2 ">
            <p style="padding: 0;" class="text-success">A OTP has been sent to your email.Verify the OTP </p>
          </div>
          <form action="/api/verifyOTP" method="post" class="requires-validation" novalidate>

            <div class="mb-3">
              <input type="hidden" name="email" value="<%= registerdEmail %>">
              <label for="validationPassWord" class="form-label">verify the OTP</label>
              <input type="number" class="form-control" id="validateOTP" name="otp" placeholder="OTP..." required>
              <small class="text-danger">
                <%=errorMessage=='otp not valid' ?errorMessage:'' %>
              </small>
            </div>
            <div class="bg-light  d-flex justify-content-center" id="otpCountDown"></div>
            <div class="pb-2 d-flex justify-content-center">
              <button class="btn btn-dark mt-3  " id="otpVerify" type="submit">verify OTP</i></button>
            </div>

          </form>

          <div class="pb-5 d-flex justify-content-center">
            <button class="btn btn-dark mt-3 disabled" id="otpResend">resend OTP</i></button>
          </div>

        </div>
        <div class="login-col-img col-12 col-sm-6">
          <img src="image/02617_WB23_July_alt_lifestyle_featured_image.webp" alt="signup-img "
            style="object-fit:cover;width: 100%; height: 100%">
        </div>



      </div>

    </div>
  </section>
  <!-- section -->
