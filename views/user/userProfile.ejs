<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TimeGaze</title>
  <link rel="icon" href="image/android-chrome-512x512.png" type="image/png" alt="Site Icon">


  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />

  <!-- boostrap css cdn link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

  <!-- bootstrap icon cdn link -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">


  <!-- css style sheet link -->
  <link rel="stylesheet" href="css/header_footer.css">


  <style>
    .is-activeMobile {
      background-color: white;
      color: black !important;

      border: 2px solid;
    }

    aside a {
      color: black;
    }

    .mobile-profile-navigaton .text-white {
      padding: 4px;
    }

    .mobile-profile-navigaton {
      display: none;
    }

    @media (max-width:768px) {
      aside {
        display: none !important;
      }

      .mobile-profile-navigaton {
        display: block;
      }
    }

    aside li {
      text-align: center;
      padding: 0.5rem
    }

    .is-active {
      color: white;
      border: 2px solid;
      text-align: center;
      margin: 0;
      background: black;
    }

    .is-active span {
      color: white;
    }

    @media (min-width: 576px) {

      #section-last h3 {
        font-size: 1.3rem;
        text-transform: capitalize;
      }
    }

    .form-control:focus {
      color: var(--bs-body-color);
      background-color: var(--bs-body-bg);
      border-color: none;
      outline: 0;
      box-shadow: none;
    }


    .breadcrumb-item a {
      color: rgb(0, 0, 0) !important;
      font-size: inherit;
    }
  </style>

</head>

<body>
  <!-- header -->
  <%- include('../include/headerCommon')  %>



    </div>


  </header>
  <!-- header -->
  <div class="container-fluid">
    <nav aria-label="breadcrumb " class="p-4">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Profile</li>
      </ol>
    </nav>
  </div>

  <section class="container-fluid my-3">
    <div class="row">
      <aside class="col-md-3 p-2 bg-light-subtle">
        <div>
          <ul class="flex-column d-flex ">
            <li>
              <h4>Your account</h4>
            </li>
            <li class="is-active ">
              <a href="/profile">
                <span class="text ">Profile</span>
              </a>
            </li>

            <li class="">
              <a href="">
                <span class="text">orders</span>
              </a>
            </li>
            <li class="">
              <a href="/address">
                <span class="text">adress</span>
              </a>
            </li>
            <li>
              <form action="/logout" method="post" class="py3 d-flex align-items-center justify-content-center">
                <i class="bi bi-arrow-return-left text-danger"></i>
                <button type="submit" class="btn "><span class="text-danger">LOG OUT</span></button>
              </form>
            </li>
          </ul>

        </div>

      </aside>
      <div class="mobile-profile-navigaton">
        <div class="col-12 d-flex   container-fluid justify-content-evenly bg-dark mb-3">
          <a href="/profile">
            <div class="text-white is-activeMobile">Profile</div>
          </a>
          <a href="/address">
            <div class="text-white ">adress</div>
          </a> <a href="">
            <div class="text-white ">orders</div>
          </a>
        </div>
      </div>


      <div class="col-md-9">
        <div class="bg-white rounded-3">
          <h3>Hey Arun ,here's Your profile</h3>
          <br>
          <div class="d-flex justify-content-between">
            <h5>Profile Information</h5>
            <div class="p-3 "><span class="btn btn-dark edit-profile-btn">edit profile</span></div>
          </div>

          <hr>
          <form action="" class="requires-validation" novalidate>
            <div class="mb-3">
              <label for="validateCustomerName" class="form-label">name*</label>
              <input type="text" class="form-control" id="validateCustomerName" placeholder="name.." required readonly>
              <small class="text-danger"></small>

            </div>

            <div class="mb-3">
              <label for="validationCustomerEmail" class="form-label">email id*</label>
              <input type="email" class="form-control" id="validateCustomerEmail" placeholder="email id..." required
                readonly>
              <small class="text-danger"></small>
            </div>

            <div class="mb-3">
              <label for="validateCustomerPhoneNumber" class="form-label">phone number*</label>
              <input type="number" class="form-control" id="validateCustomerPhoneNumber" placeholder="phone number..."
                required readonly>
              <small class="text-danger"></small>
            </div>
            <div class="text-center col-12">
              <button class="btn btn-dark " id="update-button" disabled> update </button>
            </div>
            <div class="d-flex justify-content-end">
              <a href="" class="btn btn-dark">
                <span>change passowrd</span>
              </a>
            </div>
          </form>
        </div>
      </div>

    </div>

  </section>


  <%- include('../include/footer') %>


    <script>
      const form = Array.from(document.querySelector('.requires-validation').elements);
      console.log(form);

      const editButton = document.querySelector('.edit-profile-btn');
      editButton.addEventListener('click', () => {
        form.forEach((elements, index) => {
          elements.removeAttribute('readonly');
          if (index === form.length - 1)

            elements.removeAttribute('disabled');

        })

      })

    </script>


    <!-- bootstrap js cdn link -->

    <script src="js/togglebutton.js"></script>

</body>

</html>